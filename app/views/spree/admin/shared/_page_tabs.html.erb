<h1><%= (t('.editing_page') + " \"#{(@page||@resource).title}\"").html_safe %></h1>

<% content_for :sidebar do %>

  <h3 class="name"><%= @page.title %></h3>
  <br clear="clear" />

  <ul class="sidebar post-menu" data-hook="admin_post_tabs">
    <li<%== ' class="active"' if current == t('.page_details') %>>
      <%= link_to t('.page_details'), edit_admin_page_url(@root_parent || @page) %>
    </li>      
    <li<%== ' class="active"' if current == "Contents" %>>
      <%= link_to t('.contents'), admin_page_contents_url(@root_parent || @page) %>
    </li>    
    <li<%== ' class="active"' if current == "Images" %>>
      <%= link_to "Images for page", admin_page_images_url(@root_parent || @page) %>
    </li>
	<% if @resource.respond_to?(:page) %>
    <li<%== ' class="active"' if current == "ContentImages" %>>
      <%= link_to "Images for page content #{@resource.title if @resource}", admin_page_content_images_url(@resource.page, @resource) %>
    </li>
	<% end %>    
  </ul>
  <br clear="clear" />

<% end %>
